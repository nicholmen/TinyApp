<header>
  <h1> TinyApp </h1>
<!-- In the _header.ejs partial of your app, create a <form> that POSTs to /login.
The form should contain:
a single text input with name="email"
a submit button to submit the form
Users will type in any email into this form in order to "sign in" for now. -->
    <% if (user && user.email) { %>
      <h2> Hello there, <%= user.email %> !!!!! </h2>
      <form action='/logout' method='POST'>
        <button type='submit'>logout</button>
      </form>
    <% } else { %>
      <form action='/login' method='POST'>
      <p>
        <label for='email'>email</label>
        <input type='email' name='email'/>
      </p>
      <p>
        <label for='password'>password</label>
        <input type='password' name='password'/>
      </p>
      <button type='submit'>log in</button>
      </form>
      <!-- <form action='/register' method='GET'>
        <button>Register</button>
      </form> -->
    <% } %>
    <form action='/register' method='GET'>
      <button>Register</button>
    </form>
</header>
